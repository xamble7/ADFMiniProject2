{
	"name": "DF_DataPrep",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DS_MISUMI_items",
						"type": "DatasetReference"
					},
					"name": "source1"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "DB_misumi_item",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "RemoveHTMLTags"
				},
				{
					"name": "RemoveHTMLTag"
				},
				{
					"name": "RemoveSpecialCharacters"
				},
				{
					"name": "TrimWhitespace"
				}
			],
			"scriptLines": [
				"source(output(",
				"          categoryCode as string,",
				"          categoryName as string,",
				"          seriesCode as long,",
				"          seriesName as string,",
				"          brandName as string,",
				"          earliestShipping as short,",
				"          description as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> source1",
				"source1 derive(description = replace(replace(description, '<br>', ' '), '<[^>]*>', '')\r",
				") ~> RemoveHTMLTags",
				"RemoveHTMLTags derive(description = replace(replace(replace(description, '<br>', ' '), '<p>', ''), '</p>', '')\r",
				") ~> RemoveHTMLTag",
				"RemoveHTMLTag derive(description = replace(replace(replace(description, '!', ''), '@', ''), '#', '')\r",
				") ~> RemoveSpecialCharacters",
				"RemoveSpecialCharacters derive(description = trim(description)\r",
				") ~> TrimWhitespace",
				"TrimWhitespace sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError') ~> sink1"
			]
		}
	}
}