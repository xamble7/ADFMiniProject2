{
	"name": "PL_DataIngestion_Mongo_SQL",
	"properties": {
		"activities": [
			{
				"name": "ProductsData",
				"description": "Ingest the Products data From MongoDb Server to the SQL database. ",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "MongoDbAtlasSource",
						"batchSize": 100
					},
					"sink": {
						"type": "AzureSqlSink",
						"writeBehavior": "insert",
						"sqlWriterUseTableLock": false,
						"tableOption": "autoCreate",
						"disableMetricsCollection": false
					},
					"enableStaging": false
				},
				"inputs": [
					{
						"referenceName": "DS_products",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "DB_Products",
						"type": "DatasetReference"
					}
				]
			},
			{
				"name": "CustomerData",
				"description": "Ingest the Customer data From MongoDb Server to the SQL database",
				"type": "Copy",
				"dependsOn": [
					{
						"activity": "ProductsData",
						"dependencyConditions": [
							"Completed"
						]
					}
				],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "MongoDbAtlasSource",
						"batchSize": 100
					},
					"sink": {
						"type": "AzureSqlSink",
						"writeBehavior": "insert",
						"sqlWriterUseTableLock": false,
						"tableOption": "autoCreate",
						"disableMetricsCollection": false
					},
					"enableStaging": false
				},
				"inputs": [
					{
						"referenceName": "DS_customers",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "DB_Customer",
						"type": "DatasetReference"
					}
				]
			},
			{
				"name": "TransactionsData",
				"description": "Ingest the Transactions data From MongoDb Server to the SQL database",
				"type": "Copy",
				"dependsOn": [
					{
						"activity": "CustomerData",
						"dependencyConditions": [
							"Completed"
						]
					}
				],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "MongoDbAtlasSource",
						"batchSize": 100
					},
					"sink": {
						"type": "AzureSqlSink",
						"preCopyScript": "drop table if exists dbo.transactions",
						"writeBehavior": "insert",
						"sqlWriterUseTableLock": false,
						"tableOption": "autoCreate",
						"disableMetricsCollection": false
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"path": "$['_id']['$oid']"
								},
								"sink": {
									"name": "id"
								}
							},
							{
								"source": {
									"path": "$['TransactionID']['$numberInt']"
								},
								"sink": {
									"name": "TransactionID"
								}
							},
							{
								"source": {
									"path": "$['CustomerID']['$numberInt']"
								},
								"sink": {
									"name": "CustomerID"
								}
							},
							{
								"source": {
									"path": "$['ProductID']['$numberInt']"
								},
								"sink": {
									"name": "ProductID"
								}
							},
							{
								"source": {
									"path": "$['Quantity']['$numberInt']"
								},
								"sink": {
									"name": "Quantity"
								}
							},
							{
								"source": {
									"path": "$['TotalAmount']['$numberDouble']"
								},
								"sink": {
									"name": "totalAmount"
								}
							},
							{
								"source": {
									"path": "$['TransactionDate']['$date']['$numberLong']"
								},
								"sink": {
									"name": "date",
									"type": "String"
								}
							}
						]
					}
				},
				"inputs": [
					{
						"referenceName": "DS_transactions",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "DB_Transactions",
						"type": "DatasetReference"
					}
				]
			},
			{
				"name": "ItemsData",
				"description": "Ingest the Items data From MongoDb Server to the SQL database",
				"type": "Copy",
				"dependsOn": [
					{
						"activity": "TransactionsData",
						"dependencyConditions": [
							"Completed"
						]
					}
				],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "MongoDbAtlasSource",
						"batchSize": 100
					},
					"sink": {
						"type": "AzureSqlSink",
						"writeBehavior": "insert",
						"sqlWriterUseTableLock": false,
						"tableOption": "autoCreate",
						"disableMetricsCollection": false
					},
					"enableStaging": false
				},
				"inputs": [
					{
						"referenceName": "DS_Items",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "DB_Items",
						"type": "DatasetReference"
					}
				]
			}
		],
		"annotations": []
	}
}