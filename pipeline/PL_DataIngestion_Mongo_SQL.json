{
	"name": "PL_DataIngestion_Mongo_SQL",
	"properties": {
		"activities": [
			{
				"name": "ProductsData",
				"description": "Ingest the Products data From MongoDb Server to the SQL database. ",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "MongoDbAtlasSource",
						"batchSize": 100
					},
					"sink": {
						"type": "AzureSqlSink",
						"preCopyScript": "drop table if exists dbo.products",
						"writeBehavior": "insert",
						"sqlWriterUseTableLock": false,
						"tableOption": "autoCreate",
						"disableMetricsCollection": false
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"path": "$['ProductID']['$numberInt']"
								},
								"sink": {
									"name": "Id",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "$['ProductName']"
								},
								"sink": {
									"name": "ProductName",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "$['Category']"
								},
								"sink": {
									"name": "Category",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "$['Price']['$numberDouble']"
								},
								"sink": {
									"name": "Price",
									"type": "Decimal"
								}
							},
							{
								"source": {
									"path": "$['Supplier']"
								},
								"sink": {
									"name": "Supplier",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "$['Stock']['$numberInt']"
								},
								"sink": {
									"name": "Stock",
									"type": "Int32"
								}
							}
						]
					}
				},
				"inputs": [
					{
						"referenceName": "DS_products",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "DB_Products",
						"type": "DatasetReference"
					}
				]
			},
